          class:list={[
            "mx-4 font-semibold text-gray-800 dark:text-gray-200",
            pathname === href
              ? "border-b-2 border-blue-500"
              : "border-transparent"
          ]}
        >
          {text}
        </a>
      ))
    } -->
    {
      links.map(({ href, text }) => (
        <div>
          <a
            href={href}
            class="mx-4 font-semibold text-gray-800 dark:text-gray-200"
          >
            {text}
          </a>

          {pathname === href ? (
            <div
              transition:name="menu-line"
              class="border-b-2 border-blue-500 mx-4"
            />
          ) : (
            <div class="mx-4 border-b-2 border-transparent" />
          )}
        </div>
      ))
    }
  </div>
</nav>
