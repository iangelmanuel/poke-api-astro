  { href: "/favorites", text: "Favoritos" },
  { href: "/island", text: "Islas" },
  { href: "/video", text: "Video" }
]

const { pathname } = Astro.url
---

<nav class="bg-white shadow dark:bg-slate-950">
  <div
    class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
  >
    <!-- {
      links.map(({ href, text }, index) => (
        <a
