---
import { Counter } from "@/components/shared/Couter"
import Title from "@/components/shared/Title.astro"
import MainLayout from "@/layout/MainLayout.astro"
---

<MainLayout
  title="Pokémons Favoritos"
  description="Tus pokémons favoritos"
>
  <Title>Island</Title>
  <video
    controls
    autoplay
    transition:persist="video"
  >
    <source
      src="https://ia804502.us.archive.org/33/items/GoldenGa1939_3/GoldenGa1939_3_512kb.mp4"
      type="video/mp4"
    />
  </video>

  <div
    style={{
      height: "100vh",
      backgroundColor: "blue",
      opacity: 0.2
    }}
  >
  </div>

  <Counter
    transition:persist="counter"
    transition:persist-props
    client:visible
    initValue={14}
  />
</MainLayout>
