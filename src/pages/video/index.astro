---
import { Counter } from "@/components/shared/Couter"
import Title from "@/components/shared/Title.astro"
import MainLayout from "@/layout/MainLayout.astro"
---

<MainLayout
  title="Pokémons Favoritos"
  description="Tus pokémons favoritos"
>
  <Title>Pokémons Favoritos</Title>
  <video
    controls
    autoplay
    transition:persist="video"
  >
    <source
      src="https://ia804502.us.archive.org/33/items/GoldenGa1939_3/GoldenGa1939_3_512kb.mp4"
      type="video/mp4"
    />
  </video>
  <Counter
    transition:persist="counter"
    transition:persist-props
    client:load
    initValue={30}
  />
</MainLayout>
